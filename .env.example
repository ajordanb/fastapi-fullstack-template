# =============================================================================
# API Starter Environment Configuration
# =============================================================================

# Application Configuration
APP_NAME=API Starter
APP_DOMAIN=http://localhost:8000
MODE=production

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_DATABASE=your_backend_app_backend

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
EMAIL_RESET_TOKEN_EXPIRE_MINUTES=15

# Email Configuration
EMAILS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=API Starter

# Background Tasks
DRAMATIQ_BROKER_URL=redis://redis:6379/0
DRAMATIQ_NAMESPACE=api_starter

# Datadog Monitoring Configuration
# Get your API key from https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key_here
DD_SITE=datadoghq.com  # or datadoghq.eu for EU region
DD_SERVICE=api_starter
DD_ENV=production  # dev, staging, or production
DD_TRACE_ENABLED=true
DD_LOGS_INJECTION=true
DD_PROFILING_ENABLED=false  # Set to true for performance profiling

# =============================================================================
# Production-specific configurations
# =============================================================================

# For production, consider:
# - Using environment-specific secrets management
# - Setting up SSL certificates
# - Configuring production SMTP service
# - Using managed databases (MongoDB Atlas, etc.)
# - Setting strong passwords and keys
# - Enabling Datadog monitoring with your API key